[includeIf "gitdir:~/Developer/CMS/"]
    path = ~/.gitconfig-cms

[includeIf "gitdir:~/Developer/solidlogix/**/"]
    path = ~/.gitconfig-solidlogix
[credential]
	helper = manager
[gpg]
	format = ssh
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection

[merge]
    conflictStyle = zdiff3